<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_white">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:id="@+id/option_tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textColor="#000"
        android:textSize="20dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/option_tv1"
        android:layout_below="@id/option_tv0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the board size: "
        android:textSize="15dp"
        android:textColor="#000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="20dp"/>
    <RadioGroup
        android:id="@+id/Rsizes"
        android:layout_below="@id/option_tv1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/option_tv2"
        android:layout_below="@id/Rsizes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please select the number of mines: "
        android:textSize="15dp"
        android:textColor="#000"
        android:fontFamily="sans-serif-smallcaps"
        android:layout_marginTop="20dp"/>

    <RadioGroup
        android:id="@+id/Rmines"
        android:layout_below="@id/option_tv2"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/Erase"
        android:layout_below="@id/Rmines"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Erase times played"
        android:textAllCaps="false"
        android:textSize="15dp"/>


</RelativeLayout>
</ScrollView>